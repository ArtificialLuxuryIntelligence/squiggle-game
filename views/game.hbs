<div class="game">
<div class="container">
  {{#if newsquiggle}}
  <h2>Now draw a new squiggle for someone else!</h2>

  {{else}}
  <h2>Complete the squiggle. </h2>
  <p>Use two fingers to zoom and pan</p>

  {{/if}}
  <div class="canvas-container">
    <canvas id="canvas2"></canvas>
    <canvas id="canvas"></canvas>

  </div>
  {{!-- <canvas id="zoom" width="150" height="150" style="position:absolute; top:0; left:0; display:none"></canvas> --}}
  {{!-- <canvas id="scale" width="300" height="300" style="position:absolute; top:0; left:0; display:none"></canvas> --}}


  <div class="">
    {{#if newsquiggle}}
      <form class="button-container" id="submit-form" action="/newsquiggle/submit" method="post">
        <button class="button" type="button" id="restart">RESTART</button>
        <button class="button" type="submit" id="submit" name="button">SUBMIT</button>
      
        <input type='hidden' id= 'hiddenField' name='data'  />
        <input type='hidden' id= 'hiddenField3' name='originalSize'  />
      </form>

      {{else}}

      <!-- <button type="button" id="zoomtoggle">TOGGLE ZOOM</button> -->
      <form class="button-container" id="submit-form" action="/play/submit" method="post">
        <button class="button" id="undo" type="button" name="undo">U</button>
        <button class="button" type="button" id="restart">R</button>
        <button class="button" type="submit" id="submit" name="button">S</button>
        <a id="link-button" href="/"><button  class="button"  type="button"  name="button">H</button></a>
        
        <input type='hidden' id= 'hiddenField' name='data'  />
        <input type='hidden' id= 'hiddenField2' name='png'  />

      </form>

    {{/if}}
  </div>
</div>

</div>
<script src="javascripts/play.js"></script>

